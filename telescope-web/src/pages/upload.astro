---
import Layout from '../layouts/Layout.astro';
import TopNav from '../components/TopNav.astro';

export const prerender = false;
---

<Layout title="Upload Test Results - Telescope">
  <TopNav active="upload" />
  <section class="data-content">
    <h1>Upload Test Results</h1>
    <h2>Upload existing test results to view them in the web UI.</h2>
    
    <div class="overview-section">
      <form id="upload-form" class="upload-form">
        <div class="form-group">
          <label for="file-upload">
            <span>Test Results Archive</span>
            <span class="required">*</span>
          </label>
          <div class="file-upload-area" id="file-upload-area">
            <input 
              type="file" 
              id="file-upload" 
              name="file" 
              accept=".zip,.tar,.tar.gz"
              required
              style="display: none;"
            />
            <div class="file-upload-content">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="17 8 12 3 7 8"></polyline>
                <line x1="12" y1="3" x2="12" y2="15"></line>
              </svg>
              <p>Click to select a file or drag and drop</p>
              <p class="file-upload-hint">Accepted formats: ZIP, TAR, TAR.GZ</p>
              <p id="file-name" class="file-name" style="display: none;"></p>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="test-id">
            <span>Test ID (optional)</span>
          </label>
          <input 
            type="text" 
            id="test-id" 
            name="testId" 
            placeholder="Leave empty to auto-generate"
            pattern="[a-zA-Z0-9_-]+"
          />
          <span class="form-help">Custom test ID or leave empty to auto-generate from filename</span>
        </div>

        <div class="form-actions">
          <button type="submit" class="button button-primary">Upload</button>
          <button type="reset" class="button button-secondary">Reset</button>
        </div>
      </form>
    </div>

    <div id="upload-status" class="test-status" style="display: none;">
      <div class="status-message"></div>
    </div>
  </section>
</Layout>

<script>
  const form = document.getElementById('upload-form') as HTMLFormElement;
  const fileInput = document.getElementById('file-upload') as HTMLInputElement;
  const fileUploadArea = document.getElementById('file-upload-area') as HTMLElement;
  const fileName = document.getElementById('file-name') as HTMLElement;
  const statusDiv = document.getElementById('upload-status') as HTMLElement;
  const statusMessage = statusDiv.querySelector('.status-message') as HTMLElement;

  // File input click handler
  fileUploadArea.addEventListener('click', () => {
    fileInput.click();
  });

  // Drag and drop handlers
  fileUploadArea.addEventListener('dragover', (e) => {
    e.preventDefault();
    fileUploadArea.classList.add('dragover');
  });

  fileUploadArea.addEventListener('dragleave', () => {
    fileUploadArea.classList.remove('dragover');
  });

  fileUploadArea.addEventListener('drop', (e) => {
    e.preventDefault();
    fileUploadArea.classList.remove('dragover');
    
    const files = e.dataTransfer?.files;
    if (files && files.length > 0) {
      fileInput.files = files;
      updateFileName(files[0].name);
    }
  });

  fileInput.addEventListener('change', (e) => {
    const target = e.target as HTMLInputElement;
    if (target.files && target.files.length > 0) {
      updateFileName(target.files[0].name);
    }
  });

  function updateFileName(name: string) {
    fileName.textContent = `Selected: ${escapeHtml(name)}`;
    fileName.style.display = 'block';
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    if (!fileInput.files || fileInput.files.length === 0) {
      statusMessage.innerHTML = '<p>Error: Please select a file to upload</p>';
      statusDiv.className = 'test-status status-error';
      statusDiv.style.display = 'block';
      return;
    }

    const formData = new FormData(form);
    const testIdInput = form.querySelector('#test-id') as HTMLInputElement;
    if (testIdInput.value.trim()) {
      formData.append('testId', testIdInput.value.trim());
    }

    statusDiv.style.display = 'block';
    statusMessage.innerHTML = '<p>Uploading file...</p>';
    statusDiv.className = 'test-status status-running';

    try {
      const response = await fetch('/api/upload', {
        method: 'POST',
        body: formData,
      });

      if (!response.ok) {
        const errorData = await response.json().catch(() => ({ error: 'Upload failed' }));
        throw new Error(errorData.error || 'Failed to upload file');
      }

      const result = await response.json();
      
      if (result.testId) {
        statusMessage.innerHTML = `
          <p>Upload successful!</p>
          <p>Test ID: <strong>${escapeHtml(result.testId)}</strong></p>
          <p><a href="/data/overview/${result.testId}" class="button button-primary">View Results</a></p>
        `;
        statusDiv.className = 'test-status status-success';
        form.reset();
        fileName.style.display = 'none';
      } else {
        throw new Error('No test ID returned');
      }
    } catch (error) {
      statusMessage.innerHTML = `
        <p>Error: ${escapeHtml((error as Error).message)}</p>
      `;
      statusDiv.className = 'test-status status-error';
    }
  });

  function escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
</script>

<style>
  .upload-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-top: 16px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .form-group label {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.78);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .required {
    color: rgba(239, 68, 68, 0.9);
  }

  .form-help {
    font-size: 12px;
    color: rgba(255, 255, 255, 0.5);
    font-style: italic;
  }

  .file-upload-area {
    border: 2px dashed rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    padding: 40px 20px;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s ease;
    background: rgba(0, 0, 0, 0.2);
  }

  .file-upload-area:hover {
    border-color: rgba(125, 211, 252, 0.5);
    background: rgba(0, 0, 0, 0.3);
  }

  .file-upload-area.dragover {
    border-color: var(--brand);
    background: rgba(125, 211, 252, 0.1);
  }

  .file-upload-content {
    pointer-events: none;
  }

  .file-upload-content svg {
    margin-bottom: 16px;
    color: rgba(255, 255, 255, 0.5);
  }

  .file-upload-content p {
    margin: 8px 0;
    color: rgba(255, 255, 255, 0.72);
  }

  .file-upload-hint {
    font-size: 12px;
    color: rgba(255, 255, 255, 0.5);
  }

  .file-name {
    margin-top: 12px;
    padding: 8px 12px;
    background: rgba(125, 211, 252, 0.1);
    border-radius: 6px;
    color: var(--brand);
    font-weight: 500;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
  }

  .form-group input[type="text"] {
    font: inherit;
    padding: 10px 12px;
    border-radius: 12px;
    border: 1px solid var(--border);
    background: rgba(0, 0, 0, 0.25);
    color: var(--text);
    font-size: 14px;
  }

  .form-actions {
    display: flex;
    gap: 12px;
    margin-top: 8px;
  }

  .button {
    padding: 10px 20px;
    border-radius: 12px;
    border: none;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    display: inline-block;
  }

  .button-primary {
    background: var(--brand);
    color: var(--bg);
  }

  .button-primary:hover {
    opacity: 0.9;
  }

  .button-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text);
    border: 1px solid var(--border);
  }

  .button-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
  }

  .test-status {
    margin-top: 24px;
    padding: 16px;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.12);
  }

  .status-running {
    background: rgba(251, 191, 36, 0.1);
    border-color: var(--color-warning);
  }

  .status-success {
    background: rgba(74, 222, 128, 0.1);
    border-color: var(--color-success);
  }

  .status-error {
    background: rgba(239, 68, 68, 0.1);
    border-color: var(--color-danger);
  }

  .status-message p {
    margin: 8px 0;
  }

  .status-message a {
    display: inline-block;
    margin-top: 8px;
  }
</style>
